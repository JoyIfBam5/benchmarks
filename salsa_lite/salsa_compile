#!/bin/env bash

# actor creation
src_path=actor_creation
prog=actor_creation.actor_creation
argument1=20

# mailbox_performance
#src_path=mailbox_performance
#prog=mailbox_performance.mailbox_performance;
#argument1=20
#argument2=100000

# mixed case
src_path=mixed_case
prog=mixed_case.mixed_case
argument1=20
argument2=50
argument3=10000
argument4=5

salsapath=/opt/salsa/salsa_lite2.0.3.jar
salsacompiler=salsa_lite.core.compiler.SalsaCompiler

# invoke salsa compiler
java -cp $salsapath:. $salsacompiler $src_path/*.salsa
# invoke java compiler
javac -classpath $salsapath:. $src_path/*.java
# run program
java -cp $salsapath:. -Dnstages=16 $prog $argument1 $argument2 $argument3 $argument4
